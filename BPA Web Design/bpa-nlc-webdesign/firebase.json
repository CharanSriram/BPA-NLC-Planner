{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects" : [
      {
        "source": "/",
        "destination": "/home",
        "type": "301"
      }
    ],
    "rewrites" : [
      {
        "source": "/home",
        "function": "app"
      },
      {
        "source": "/app",
        "destination": "/index.html"
      },
      {
        "source": "/about",
        "destination": "/index.html"
      },
      {
        "source": "/contact",
        "destination": "/index.html"
      }
    ]

  }
}
